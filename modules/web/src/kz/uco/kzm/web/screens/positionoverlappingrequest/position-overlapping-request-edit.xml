<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://positionOverlappingRequestEdit.caption"
        focusComponent="form"
        messagesPack="kz.uco.kzm.web.screens.positionoverlappingrequest">
    <data>
        <instance id="positionOverlappingRequestDc"
                  class="kz.uco.kzm.entity.PositionOverlappingRequest">
            <view extends="_local">
                <property name="personGroup" view="_minimal"/>
                <property name="positionGroup" view="_minimal"/>
                <property name="type" view="_minimal"/>
                <property name="attachment" view="_minimal"/>
                <property name="status" view="_minimal"/>
            </view>
            <loader/>
        </instance>
        <collection id="typesDc" class="kz.uco.kzm.entity.DicPositionsOverlappingType" view="_minimal">
            <loader id="typesDl">
                <query>
                    <![CDATA[select e from kzm$DicPositionsOverlappingType e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="scrollBox" spacing="true">
        <scrollBox id="scrollBox" spacing="true">
            <form id="form" dataContainer="positionOverlappingRequestDc">
                <column width="350px">
                    <textField id="legacyIdField" property="legacyId"/>
                    <textField id="organizationBinField" property="organizationBin"/>
                    <textField id="integrationUserLoginField" property="integrationUserLogin"/>
                    <textField id="requestNumberField" property="requestNumber"/>
                    <pickerField id="statusField" property="status">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </pickerField>
                    <dateField id="requestDateField" property="requestDate"/>
                    <textField id="commentField" property="comment"/>
                    <pickerField id="personGroupField" property="personGroup"/>
                    <dateField id="workCompletionDateField" property="workCompletionDate"/>
                    <textField id="justificationField" property="justification"/>
                    <pickerField id="positionGroupField" property="positionGroup"/>
                    <lookupPickerField id="typeField" optionsContainer="typesDc" property="type"/>
                    <upload id="attachmentField" fileStoragePutMode="IMMEDIATE" property="attachment"
                            showFileName="true"/>
                </column>
            </form>
        </scrollBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
